{
  "name": "sage-framework",
  "private": true,
  "browserslist": [
    "extends @wordpress/browserslist-config"
  ],
  "engines": {
    "node": ">=12.14.0"
  },
  "scripts": {
    "dev": "sage build development",
    "build": "sage build production",
    "debug": "sage build production --log --debug --ci",
    "test": "npm run lint",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint resources/scripts",
    "lint:css": "stylelint \"resources/**/*.{css,scss,vue}\""
  },
  "devDependencies": {
    "@roots/sage": "^3.0.83-alpha.0",
    "@wordpress/browserslist-config": "^3.0"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.4.0",
    "postcss": "^8.2.8"
  }
}
