{
  "name": "sage",
  "version": "9.0.0",
  "author": "Roots <team@roots.io>",
  "homepage": "https://roots.io/sage/",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git://github.com/roots/sage.git"
  },
  "bugs": {
    "url": "https://github.com/roots/sage/issues"
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "http://opensource.org/licenses/MIT"
    }
  ],
  "scripts": {
    "prebuild": "npm run -s lint",
    "build": "webpack --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "build:production": "webpack --progress --hide-modules -p --config=node_modules/laravel-mix/setup/webpack.config.js",
    "start": "webpack --watch --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "lint": "npm run -s lint:scripts && npm run -s lint:styles",
    "lint:scripts": "eslint *.js resources/assets/scripts resources/assets/build",
    "lint:styles": "stylelint \"resources/assets/styles/**/*.{css,sass,scss,sss,less}\"",
    "test": "npm run -s lint"
  },
  "engines": {
    "node": ">= 6.9.4"
  },
  "devDependencies": {
    "browser-sync": "~2.21",
    "browser-sync-webpack-plugin": "~1.2",
    "bs-html-injector": "~3.0",
    "eslint": "~4.14",
    "eslint-plugin-import": "~2.8",
    "import-glob": "~1.5",
    "laravel-mix": "~1.7",
    "rimraf": "~2.6",
    "stylelint": "~8.4",
    "stylelint-config-standard": "~18.0",
    "webpack": "~3.10"
  },
  "dependencies": {
    "bootstrap": "v4.1.0",
    "jquery": "^3.3.1",
    "popper.js": "^1.14.3"
  }
}
