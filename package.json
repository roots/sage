  },
  "devDependencies": {
    "@roots/sage": "3.0.112-alpha.0",
    "@tailwindcss/jit": "^0.1.5",
    "@tailwindcss/typography": "^0.4.0",
    "@wordpress/browserslist-config": "^2.7.0",
    "postcss": "^8.2.8",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "tailwindcss": "^2.0.4",
    "typescript": "^4.2.3"
  }
}
